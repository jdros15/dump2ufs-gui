<Window x:Class="Dump2UfsGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="dump2ufs â€” PS5 Game to .ffpkg Converter"
        Width="720" Height="700" MinWidth="600" MinHeight="600"
        Background="{StaticResource BgDarkBrush}"
        WindowStartupLocation="CenterScreen"
        AllowDrop="True" Drop="Window_Drop" DragOver="Window_DragOver"
        Loaded="Window_Loaded">

    <Window.Resources>
        <!-- Glow effect for cards -->
        <DropShadowEffect x:Key="CardGlow" Color="#58A6FF" BlurRadius="0" ShadowDepth="0" Opacity="0"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- â•â•â• HEADER â•â•â• -->
        <Border Grid.Row="0" Background="{StaticResource BgMediumBrush}" 
                BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="0,0,0,1"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="ðŸ“¦" FontSize="24" VerticalAlignment="Center" Margin="0,0,10,0"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="dump2ufs" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="PS5 Game Dump â†’ .ffpkg Converter" FontSize="11" 
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,-1,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnCheckUpdate" Content="ðŸ”„ Check for Updates"
                            Style="{StaticResource SecondaryButton}" Click="BtnCheckUpdate_Click"
                            Margin="0,0,8,0" FontSize="11"/>
                    <Border Background="{StaticResource BgCardBrush}" CornerRadius="6" Padding="8,4"
                            BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1">
                        <TextBlock x:Name="TxtToolVersion" Text="UFS2Tool: â€”" FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â•â•â• MAIN CONTENT â•â•â• -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="24,20">
            <StackPanel MaxWidth="640" HorizontalAlignment="Center" Width="640">

                <!-- â”€â”€ INPUT SECTION â”€â”€ -->
                <Border Background="{StaticResource BgCardBrush}" CornerRadius="10" Padding="20"
                        BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="INPUT" Style="{StaticResource SectionLabel}" 
                                   Foreground="{StaticResource AccentBlueBrush}"/>
                        <TextBlock Text="PS5 Game Dump Folder" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TxtInputPath" Grid.Column="0" IsReadOnly="True"
                                     FontSize="12" Margin="0,0,8,0">
                                <TextBox.Style>
                                    <Style TargetType="TextBox" BasedOn="{StaticResource {x:Type TextBox}}">
                                        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text.Length, RelativeSource={RelativeSource Self}, FallbackValue=0}" Value="0">
                                                <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>
                            <Button x:Name="BtnBrowseInput" Grid.Column="1" Content="ðŸ“ Browse"
                                    Style="{StaticResource SecondaryButton}" Click="BtnBrowseInput_Click"/>
                        </Grid>

                        <!-- Drop hint -->
                        <TextBlock x:Name="TxtDropHint" Text="or drag and drop a folder here" 
                                   FontSize="11" Foreground="{StaticResource TextMutedBrush}" 
                                   HorizontalAlignment="Center" Margin="0,8,0,0"/>

                        <!-- Game info panel (hidden until valid) -->
                        <Border x:Name="PanelGameInfo" Visibility="Collapsed"
                                Background="#0D58A6FF" CornerRadius="8" Padding="14" Margin="0,14,0,0"
                                BorderBrush="#3058A6FF" BorderThickness="1">
                            <StackPanel>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,6">
                                    <TextBlock Text="ðŸŽ®" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBlock x:Name="TxtGameTitle" FontSize="14" FontWeight="SemiBold" 
                                               Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                                </StackPanel>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="ID:" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" 
                                               Margin="26,0,4,0"/>
                                    <TextBlock x:Name="TxtGameId" FontSize="11" Foreground="{StaticResource AccentPurpleBrush}"/>
                                    <TextBlock Text="  â€¢  Label:" FontSize="11" Foreground="{StaticResource TextSecondaryBrush}" 
                                               Margin="8,0,4,0"/>
                                    <TextBlock x:Name="TxtLabel" FontSize="11" Foreground="{StaticResource AccentOrangeBrush}"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Error panel -->
                        <Border x:Name="PanelInputError" Visibility="Collapsed"
                                Background="#15F85149" CornerRadius="8" Padding="12" Margin="0,14,0,0"
                                BorderBrush="#30F85149" BorderThickness="1">
                            <TextBlock x:Name="TxtInputError" FontSize="12" Foreground="{StaticResource AccentRedBrush}"
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- â”€â”€ OUTPUT SECTION â”€â”€ -->
                <Border Background="{StaticResource BgCardBrush}" CornerRadius="10" Padding="20"
                        BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="OUTPUT" Style="{StaticResource SectionLabel}" 
                                   Foreground="{StaticResource AccentGreenBrush}"/>
                        <TextBlock Text="Output .ffpkg File" FontSize="14" FontWeight="SemiBold" Margin="0,0,0,10"/>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="TxtOutputPath" Grid.Column="0" FontSize="12" Margin="0,0,8,0"/>
                            <Button x:Name="BtnBrowseOutput" Grid.Column="1" Content="ðŸ’¾ Save As"
                                    Style="{StaticResource SecondaryButton}" Click="BtnBrowseOutput_Click"/>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- â”€â”€ CONVERT BUTTON â”€â”€ -->
                <Button x:Name="BtnConvert" Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Stretch" Margin="0,4,0,16"
                        Click="BtnConvert_Click" IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš¡" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Convert to .ffpkg" FontSize="15" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- â”€â”€ CANCEL BUTTON (hidden until converting) â”€â”€ -->
                <Button x:Name="BtnCancel" Visibility="Collapsed"
                        HorizontalAlignment="Center" Margin="0,0,0,8"
                        Click="BtnCancel_Click" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                            <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                            <Setter Property="BorderBrush" Value="#30F85149"/>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ•" FontSize="12" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="Cancel" FontSize="12" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <!-- â”€â”€ PROGRESS SECTION â”€â”€ -->
                <Border x:Name="PanelProgress" Visibility="Collapsed"
                        Background="{StaticResource BgCardBrush}" CornerRadius="10" Padding="20"
                        BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="TxtProgressStage" Grid.Column="0"
                                       FontSize="13" FontWeight="SemiBold" 
                                       Foreground="{StaticResource AccentBlueBrush}"/>
                            <TextBlock x:Name="TxtProgressPercent" Grid.Column="1"
                                       FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Grid>
                        <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" Value="0" Margin="0,0,0,8"/>
                        <TextBlock x:Name="TxtProgressDetail" FontSize="11" 
                                   Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

                <!-- â”€â”€ LOG OUTPUT â”€â”€ -->
                <Border Background="{StaticResource BgCardBrush}" CornerRadius="10" Padding="16"
                        BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1"
                        Margin="0,0,0,16">
                    <StackPanel>
                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ“‹ Log Output" FontSize="12" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondaryBrush}" Grid.Column="0"/>
                            <Button x:Name="BtnClearLog" Grid.Column="1" Content="Clear"
                                    FontSize="10" Padding="8,3" Click="BtnClearLog_Click">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                        <Setter Property="FontSize" Value="10"/>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                        <Border Background="{StaticResource BgInputBrush}" CornerRadius="6" Padding="2"
                                BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1">
                            <TextBox x:Name="TxtLog" IsReadOnly="True" TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto" Height="180"
                                     FontFamily="Cascadia Code, Consolas, monospace" FontSize="11"
                                     Background="Transparent" BorderThickness="0" Padding="8"
                                     Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Border>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>

        <!-- â•â•â• STATUS BAR â•â•â• -->
        <Border Grid.Row="2" Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="0,1,0,0"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TxtStatus" Grid.Column="0" FontSize="11" 
                           Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center"
                           Text="Ready â€” select a PS5 game dump folder to begin"/>
                <TextBlock Grid.Column="1" FontSize="10" Foreground="{StaticResource TextMutedBrush}" 
                           VerticalAlignment="Center" Text="Powered by UFS2Tool by SvenGDK"/>
            </Grid>
        </Border>

        <!-- â•â•â• OVERLAY: UFS2Tool download/first-run â•â•â• -->
        <Border x:Name="OverlaySetup" Grid.RowSpan="3" Visibility="Collapsed"
                Background="#E0000000">
            <Border Background="{StaticResource BgCardBrush}" CornerRadius="12" Padding="32"
                    MaxWidth="420" MaxHeight="300"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="âš™ï¸ Setup Required" FontSize="18" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    <TextBlock x:Name="TxtSetupMessage" TextWrapping="Wrap" TextAlignment="Center"
                               FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,16"
                               Text="UFS2Tool is required but was not found. Would you like to download it automatically?"/>
                    <ProgressBar x:Name="SetupProgress" Visibility="Collapsed" Margin="0,0,0,12"/>
                    <TextBlock x:Name="TxtSetupProgress" Visibility="Collapsed" FontSize="11"
                               HorizontalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="BtnSetupDownload" Content="Download Now" 
                                Style="{StaticResource PrimaryButton}" Padding="20,10"
                                Click="BtnSetupDownload_Click" Margin="0,0,8,0"/>
                        <Button x:Name="BtnSetupBrowse" Content="Browse..." 
                                Style="{StaticResource SecondaryButton}" Click="BtnSetupBrowse_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

    </Grid>
</Window>
