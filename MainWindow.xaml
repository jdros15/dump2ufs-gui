<Window x:Class="Dump2UfsGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:models="clr-namespace:Dump2UfsGui.Models"
        Title="dump2ufs â€” PS5 Game Dump Converter"
        Width="880" Height="680" MinWidth="700" MinHeight="550"
        ResizeMode="CanMinimize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Icon="pack://application:,,,/ico.png">

    <Window.Resources>
        <ResourceDictionary>
            <DropShadowEffect x:Key="CardGlow" Color="#7B2FFF" BlurRadius="15" ShadowDepth="0" Opacity="0"/>
            <BooleanToVisibilityConverter x:Key="BoolToVis"/>
            <LinearGradientBrush x:Key="ShimmerBrush" StartPoint="0,0" EndPoint="1,0">
                <GradientStop Color="#00FFFFFF" Offset="0"/>
                <GradientStop Color="#30FFFFFF" Offset="0.5"/>
                <GradientStop Color="#00FFFFFF" Offset="1"/>
            </LinearGradientBrush>
        </ResourceDictionary>
    </Window.Resources>

    <Border Background="{StaticResource BgDarkBrush}" 
            CornerRadius="12" 
            BorderBrush="{StaticResource BorderDimBrush}" 
            BorderThickness="1"
            Margin="1"
            ClipToBounds="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- â•â•â• CUSTOM TITLE BAR / HEADER â•â•â• -->
            <Border Grid.Row="0" Background="{StaticResource BgMediumBrush}" 
                    BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="0,0,0,1"
                    Padding="16,0" CornerRadius="11,11,0,0"
                    MouseLeftButtonDown="TitleBar_MouseDown">
                <Grid Height="52">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App branding (left) -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="pack://application:,,,/ico.png" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <StackPanel VerticalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="dump2ufs" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                                <TextBlock Text="v1.3.1" FontSize="11" FontWeight="SemiBold" Foreground="{StaticResource AccentPurpleBrush}" 
                                           VerticalAlignment="Bottom" Margin="6,0,0,2" Opacity="0.8"/>
                            </StackPanel>
                            <TextBlock Text="PS5 Game Dump Converter" FontSize="10" 
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,-1,0,0"/>
                        </StackPanel>
                    </StackPanel>

                <!-- Window controls (right) -->
                <Button Grid.Column="1" Click="BtnMinimize_Click" Focusable="False" IsTabStop="False">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Width" Value="46"/>
                            <Setter Property="Height" Value="32"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="Bg" Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bg" Property="Background" Value="#20FFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="Bg" Property="Background" Value="#30FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="â”€" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                </Button>

                <Button Grid.Column="2" Click="BtnClose_Click" Focusable="False" IsTabStop="False" Margin="4,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Width" Value="46"/>
                            <Setter Property="Height" Value="32"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="Bg" Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bg" Property="Background" Value="#40F85149"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="Bg" Property="Background" Value="#60F85149"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="âœ•" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                </Button>
            </Grid>
        </Border>

        <!-- â•â•â• MAIN CONTENT â•â•â• -->
        <Grid Grid.Row="1" Margin="20,12,20,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/> <!-- Row 0: Drag Zone -->
                <RowDefinition Height="Auto"/> <!-- Row 1: Output Settings -->
                <RowDefinition Height="*" MinHeight="200"/> <!-- Row 2: Queue/Log -->
                <RowDefinition Height="Auto"/> <!-- Row 3: Convert/Cancel -->
            </Grid.RowDefinitions>

            <!-- â”€â”€ ROW 0: DRAG-AND-DROP ZONE (full width, compact) â”€â”€ -->
            <Border Grid.Row="0" x:Name="DropZoneBorder" CornerRadius="10" Padding="0"
                    Margin="0,0,0,8"
                    AllowDrop="True"
                    Drop="DropZone_Drop" DragOver="DropZone_DragOver" DragLeave="DropZone_DragLeave"
                    Cursor="Hand" MouseLeftButtonDown="DropZone_MouseClick">
                <Border.BorderBrush>
                    <SolidColorBrush x:Name="DropZoneBorderBrush" Color="#353560"/>
                </Border.BorderBrush>
                <Border.BorderThickness>
                    <Thickness>2</Thickness>
                </Border.BorderThickness>
                <Border.Background>
                    <SolidColorBrush x:Name="DropZoneBgBrush" Color="#0A0A1A"/>
                </Border.Background>
                <Grid MinHeight="68">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,8,0,8">
                        <TextBlock x:Name="DropZoneIcon" Text="ðŸ“‚" FontSize="22" 
                                   HorizontalAlignment="Center" Margin="0,0,0,4"
                                   RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <ScaleTransform x:Name="DropZoneIconScale" ScaleX="1" ScaleY="1"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <TextBlock x:Name="DropZoneText" Text="Drag &amp; drop PS5 game dump folders here to add to queue"
                                   FontSize="13" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center" Margin="0,0,0,2"/>
                        <TextBlock x:Name="DropZoneSubText" Text="or click to browse â€” drop multiple folders at once"
                                   FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <Border x:Name="DropZoneHighlight" CornerRadius="10" IsHitTestVisible="False"
                            Visibility="Collapsed">
                        <Border.Background>
                            <SolidColorBrush Color="#7B2FFF" Opacity="0.08"/>
                        </Border.Background>
                    </Border>
                </Grid>
            </Border>

            <!-- â”€â”€ ROW 1: OUTPUT DIRECTORY (Between Drag & Queue) â”€â”€ -->
            <Border Grid.Row="1" Background="{StaticResource BgCardBrush}" CornerRadius="10" Padding="12"
                    BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1"
                    Margin="0,0,0,8">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="ðŸ’¾ Output Directory:" FontSize="12" VerticalAlignment="Center" Margin="0,0,12,0"
                               Foreground="{StaticResource TextSecondaryBrush}"/>
                    <TextBox x:Name="TxtOutputDir" Grid.Column="1" FontSize="12" Margin="0,0,8,0"/>
                    <Button x:Name="BtnBrowseOutput" Grid.Column="2" Content="Browse"
                            Style="{StaticResource SecondaryButton}" Click="BtnBrowseOutput_Click" MinWidth="100"/>
                </Grid>
            </Border>

            <!-- â”€â”€ ROW 2: QUEUE (left) + LOG (right) â”€â”€ -->
            <Grid Grid.Row="2" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition x:Name="LogColumn" Width="0"/>
                </Grid.ColumnDefinitions>

                <!-- QUEUE LIST (left side, always visible) -->
                <Border Grid.Column="0" Background="{StaticResource BgCardBrush}" CornerRadius="10" Padding="12"
                        BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1">
                    <DockPanel>
                        <Grid DockPanel.Dock="Top" Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="ðŸ“‹ Conversion Queue" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="TxtQueueCount" Text="" FontSize="11"
                                           Foreground="{StaticResource TextMutedBrush}" Margin="8,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button x:Name="BtnClearQueue" Grid.Column="1" Content="Clear Queue"
                                    FontSize="10" Padding="8,3" Click="BtnClearQueue_Click">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                        <Setter Property="FontSize" Value="10"/>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>


                        <!-- Queue items -->
                        <ListBox x:Name="QueueListBox" Background="Transparent" BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 AllowDrop="True"
                                 PreviewMouseLeftButtonDown="QueueList_PreviewMouseLeftButtonDown"
                                 PreviewMouseMove="QueueList_PreviewMouseMove"
                                 Drop="QueueList_Drop"
                                 DragOver="QueueList_DragOver">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,0,0,4"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="#0D7B2FFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="6" Padding="10,8" Margin="0"
                                            BorderThickness="1">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#0D0D20"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource BorderDimBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static models:QueueItemStatus.Processing}">
                                                        <Setter Property="BorderBrush" Value="#807B2FFF"/>
                                                        <Setter Property="Background" Value="#1A7B2FFF"/>
                                                        <Setter Property="Effect" Value="{StaticResource CardGlow}"/>
                                                        <DataTrigger.EnterActions>
                                                            <BeginStoryboard x:Name="PulseBg">
                                                                <Storyboard RepeatBehavior="Forever">
                                                                    <ColorAnimation Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)"
                                                                                    From="#0E7B2FFF" To="#257B2FFF" Duration="0:0:1.0" AutoReverse="True"/>
                                                                    <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                                                                     From="0.2" To="0.6" Duration="0:0:1.0" AutoReverse="True"/>
                                                                </Storyboard>
                                                            </BeginStoryboard>
                                                        </DataTrigger.EnterActions>
                                                        <DataTrigger.ExitActions>
                                                            <StopStoryboard BeginStoryboardName="PulseBg"/>
                                                        </DataTrigger.ExitActions>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static models:QueueItemStatus.Done}">
                                                        <Setter Property="BorderBrush" Value="#303FB950"/>
                                                        <Setter Property="Background" Value="#0A3FB950"/>
                                                        <Setter Property="Effect" Value="{x:Null}"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static models:QueueItemStatus.Error}">
                                                        <Setter Property="BorderBrush" Value="#30F85149"/>
                                                        <Setter Property="Background" Value="#0AF85149"/>
                                                        <Setter Property="Effect" Value="{x:Null}"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/> <!-- Icon/Drag -->
                                                <ColumnDefinition Width="*"/>    <!-- Text (Fill) -->
                                                <ColumnDefinition Width="Auto"/> <!-- Buttons (Pinned Right) -->
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <!-- 1. LEFT: Drag handle + Icon -->
                                            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,4,10,0">
                                                <TextBlock Text="â ¿" FontSize="16" Foreground="{StaticResource TextMutedBrush}"
                                                            VerticalAlignment="Center" Margin="0,0,8,0" Cursor="SizeAll"
                                                            Visibility="{Binding IsWaiting, Converter={StaticResource BoolToVis}}"/>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                                    <TextBlock x:Name="IconGame" Text="ðŸŽ®" FontSize="12" VerticalAlignment="Center"/>
                                                    <TextBlock x:Name="IconBusy" Text="âš™ï¸" FontSize="11" Margin="2,0,0,0"
                                                               VerticalAlignment="Center" Visibility="Collapsed"
                                                               RenderTransformOrigin="0.5,0.5">
                                                        <TextBlock.RenderTransform>
                                                            <RotateTransform Angle="0"/>
                                                        </TextBlock.RenderTransform>
                                                        <TextBlock.Style>
                                                            <Style TargetType="TextBlock">
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Status}" Value="{x:Static models:QueueItemStatus.Processing}">
                                                                        <Setter Property="Visibility" Value="Visible"/>
                                                                        <DataTrigger.EnterActions>
                                                                            <BeginStoryboard x:Name="RotateGear">
                                                                                <Storyboard RepeatBehavior="Forever">
                                                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                                                     From="0" To="360" Duration="0:0:1.5"/>
                                                                                </Storyboard>
                                                                            </BeginStoryboard>
                                                                        </DataTrigger.EnterActions>
                                                                        <DataTrigger.ExitActions>
                                                                            <StopStoryboard BeginStoryboardName="RotateGear"/>
                                                                        </DataTrigger.ExitActions>
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </TextBlock.Style>
                                                    </TextBlock>
                                                </StackPanel>
                                            </StackPanel>

                                            <!-- 2. CENTER: Game info + Error message (Wraps/Fill) -->
                                            <StackPanel Grid.Column="1" Grid.Row="0" VerticalAlignment="Top">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="{Binding GameInfo.TitleName}" FontSize="12" FontWeight="SemiBold"
                                                                Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"
                                                                TextTrimming="CharacterEllipsis" MaxWidth="280"/>
                                                    <TextBlock Text="  â€¢  " FontSize="10" Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding GameInfo.TitleId}" FontSize="10" 
                                                                Foreground="{StaticResource AccentPurpleBrush}" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                
                                                <!-- Error/Status text -->
                                                <TextBlock Text="{Binding StatusText}" FontSize="10" Margin="0,2,10,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                                            <Setter Property="TextTrimming" Value="CharacterEllipsis"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:QueueItemStatus.Processing}">
                                                                    <Setter Property="Foreground" Value="{StaticResource AccentPurpleBrush}"/>
                                                                    <DataTrigger.EnterActions>
                                                                        <BeginStoryboard x:Name="PulseText">
                                                                            <Storyboard RepeatBehavior="Forever">
                                                                                <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0.6" Duration="0:0:0.8" AutoReverse="True"/>
                                                                            </Storyboard>
                                                                        </BeginStoryboard>
                                                                    </DataTrigger.EnterActions>
                                                                    <DataTrigger.ExitActions>
                                                                        <StopStoryboard BeginStoryboardName="PulseText"/>
                                                                    </DataTrigger.ExitActions>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:QueueItemStatus.Done}">
                                                                    <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="{x:Static models:QueueItemStatus.Error}">
                                                                    <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- 3. PROGRESS BAR (Full width row 1) -->
                                            <Grid Grid.Row="1" Grid.Column="1" Margin="0,6,10,2">
                                                <Grid.Style>
                                                    <Style TargetType="Grid">
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsProcessing}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsDone}" Value="True">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Grid.Style>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="35"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <Border Grid.Column="0" Height="6" CornerRadius="3" ClipToBounds="True" Background="#1A1A2E">
                                                    <Grid>
                                                        <ProgressBar x:Name="ItemProgress" Height="6" Background="Transparent" BorderThickness="0"
                                                                     Value="{Binding Progress, Mode=OneWay}">
                                                            <ProgressBar.Style>
                                                                <Style TargetType="ProgressBar">
                                                                    <Setter Property="Foreground" Value="{StaticResource AccentPurpleBrush}"/>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding IsDone}" Value="True">
                                                                            <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </ProgressBar.Style>
                                                        </ProgressBar>
                                                        
                                                        <Border x:Name="Shimmer" Background="{StaticResource ShimmerBrush}"
                                                                RenderTransformOrigin="0.5,0.5" IsHitTestVisible="False">
                                                            <Border.RenderTransform>
                                                                <TranslateTransform X="-300"/>
                                                            </Border.RenderTransform>
                                                            <Border.Style>
                                                                <Style TargetType="Border">
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Status}" Value="{x:Static models:QueueItemStatus.Processing}">
                                                                            <DataTrigger.EnterActions>
                                                                                <BeginStoryboard x:Name="DoShimmer">
                                                                                    <Storyboard RepeatBehavior="Forever">
                                                                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                                                                                         From="-300" To="300" Duration="0:0:1.5"/>
                                                                                    </Storyboard>
                                                                                </BeginStoryboard>
                                                                            </DataTrigger.EnterActions>
                                                                            <DataTrigger.ExitActions>
                                                                                <StopStoryboard BeginStoryboardName="DoShimmer"/>
                                                                            </DataTrigger.ExitActions>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding IsDone}" Value="True">
                                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                                        </DataTrigger>
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                        </Border>
                                                    </Grid>
                                                </Border>

                                                <TextBlock Grid.Column="1" Text="{Binding Progress, StringFormat='{}{0}%'}" 
                                                           FontSize="10" FontWeight="SemiBold" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="4,0,0,0">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="{StaticResource AccentPurpleBrush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding IsDone}" Value="True">
                                                                    <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </Grid>

                                            <!-- 4. RIGHT: Buttons -->
                                            <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Top" Margin="0,2,0,0">
                                                <!-- Copy error button -->
                                                <Button Content="Copy Details" FontSize="9" Padding="8,1" Margin="0,0,4,0"
                                                        Click="BtnCopyError_Click" Tag="{Binding}"
                                                        Visibility="{Binding IsError, Converter={StaticResource BoolToVis}}">
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                                            <Setter Property="BorderBrush" Value="#40F85149"/>
                                                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>

                                                <!-- Remove button -->
                                                <Button Content="âœ•" FontSize="11" Padding="6,1"
                                                        Click="BtnRemoveQueueItem_Click" Tag="{Binding}"
                                                        Visibility="{Binding CanRemove, Converter={StaticResource BoolToVis}}">
                                                    <Button.Style>
                                                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                                            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                                        </Style>
                                                    </Button.Style>
                                                </Button>
                                            </StackPanel>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Border>

                <!-- LOG OUTPUT (right side, toggled) -->
                <Border x:Name="PanelLog" Grid.Column="1" Visibility="Collapsed"
                        Background="{StaticResource BgCardBrush}" CornerRadius="10" Padding="12"
                        BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1"
                        Margin="8,0,0,0">
                    <DockPanel>
                        <Grid DockPanel.Dock="Top" Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ“‹ Log Output" FontSize="11" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondaryBrush}" Grid.Column="0"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="BtnCopyLog" Content="Copy Log" FontSize="10" Padding="8,3"
                                        Click="BtnCopyLog_Click" Margin="0,0,4,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                            <Setter Property="FontSize" Value="10"/>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button x:Name="BtnToggleLog" Content="Hide" FontSize="10" Padding="8,3"
                                        Click="BtnToggleLog_Click" Margin="0,0,4,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                            <Setter Property="FontSize" Value="10"/>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button x:Name="BtnClearLog" Content="Clear" FontSize="10" Padding="8,3"
                                        Click="BtnClearLog_Click">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                            <Setter Property="FontSize" Value="10"/>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                        <Border Background="{StaticResource BgInputBrush}" CornerRadius="6" Padding="2"
                                BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1">
                            <TextBox x:Name="TxtLog" IsReadOnly="True" TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     FontFamily="Cascadia Code, Consolas, monospace" FontSize="11"
                                     Background="Transparent" BorderThickness="0" Padding="8"
                                     Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Border>
                    </DockPanel>
                </Border>
            </Grid>

            <!-- â”€â”€ ROW 3: SETTINGS & ACTION BUTTONS â”€â”€ -->
            <Grid Grid.Row="3" Margin="0,4,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto" MinWidth="260"/>
                </Grid.ColumnDefinitions>

                <!-- Format Settings -->
                <Border Grid.Column="0" Background="{StaticResource BgCardBrush}" CornerRadius="10" Padding="12,8"
                        BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1"
                        Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Format:" FontSize="12" VerticalAlignment="Center" Margin="0,0,10,0"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <ComboBox x:Name="ComboFormat" Width="140" Height="28" VerticalContentAlignment="Center"
                                  SelectionChanged="ComboFormat_SelectionChanged" Margin="0,0,20,0"
                                  SelectedIndex="0">
                            <ComboBoxItem Content="Fake FPKG (.ffpkg)" Tag="ffpkg"/>
                            <ComboBoxItem Content="PFS Image (.img)" Tag="img"/>
                        </ComboBox>

                        <CheckBox x:Name="CheckExperimentalFfpkg" Style="{StaticResource ToggleSwitchStyle}"
                                  VerticalAlignment="Center" IsChecked="False"
                                  ToolTip="Appends a compatibility trailer for .ffpkg files, making them compatible with EchoStretch's PS5 Dump Installer."
                                  Checked="CheckExperimentalFfpkg_Changed" Unchecked="CheckExperimentalFfpkg_Changed">
                            <TextBlock FontSize="12" VerticalAlignment="Center">
                                <Hyperlink NavigateUri="https://github.com/EchoStretch/dump_installer" 
                                           RequestNavigate="Hyperlink_RequestNavigate"
                                           Foreground="{StaticResource AccentPurpleBrush}"
                                           TextDecorations="None"
                                           ToolTip="Open EchoStretch's Dump Installer GitHub repository">Dump Installer</Hyperlink>
                                <Run Text="compatible" Foreground="{StaticResource TextSecondaryBrush}"/>
                            </TextBlock>
                        </CheckBox>
                    </StackPanel>
                </Border>

                <!-- Action Buttons -->
                <Grid Grid.Column="1">
                    <Button x:Name="BtnConvert" Style="{StaticResource PrimaryButton}"
                            HorizontalAlignment="Stretch"
                            Click="BtnConvert_Click" IsEnabled="False">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš¡" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0" RenderTransformOrigin="0.5,0.5">
                                <TextBlock.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </TextBlock.RenderTransform>
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsEnabled, RelativeSource={RelativeSource AncestorType=Button}}" Value="True">
                                                <DataTrigger.EnterActions>
                                                    <BeginStoryboard x:Name="PulseBolt">
                                                        <Storyboard RepeatBehavior="Forever">
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                                                             From="1.0" To="1.2" Duration="0:0:0.8" AutoReverse="True"/>
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                                                             From="1.0" To="1.2" Duration="0:0:0.8" AutoReverse="True"/>
                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                             From="1.0" To="0.7" Duration="0:0:0.8" AutoReverse="True"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </DataTrigger.EnterActions>
                                                <DataTrigger.ExitActions>
                                                    <StopStoryboard BeginStoryboardName="PulseBolt"/>
                                                </DataTrigger.ExitActions>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock x:Name="TxtConvertButton" Text="Convert to .ffpkg" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnCancel" Visibility="Collapsed"
                            HorizontalAlignment="Stretch"
                            Click="BtnCancel_Click" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#D32F2F"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="24,12"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E53935"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#B71C1C"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âœ•" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0" Foreground="White"/>
                            <TextBlock x:Name="TxtCancelButton" Text="Cancel" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>

        </Grid>

        <!-- â•â•â• STATUS BAR â•â•â• -->
        <Border Grid.Row="2" Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="0,1,0,0"
                Padding="16,8" CornerRadius="0,0,11,11">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BtnShowLog" Grid.Column="0" Content="ðŸ“‹ Log" FontSize="10" Padding="8,3"
                        Click="BtnShowLog_Click" Margin="0,0,10,0" VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                            <Setter Property="FontSize" Value="10"/>
                        </Style>
                    </Button.Style>
                </Button>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="IconStatusBusy" Text="âš™ï¸" FontSize="12" Margin="0,0,8,0" 
                               Visibility="Collapsed" RenderTransformOrigin="0.5,0.5">
                        <TextBlock.RenderTransform>
                            <RotateTransform Angle="0"/>
                        </TextBlock.RenderTransform>
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Style.Triggers>
                                    <Trigger Property="Visibility" Value="Visible">
                                        <Trigger.EnterActions>
                                            <BeginStoryboard x:Name="RotateStatusGear">
                                                <Storyboard RepeatBehavior="Forever">
                                                    <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                                                                     From="0" To="360" Duration="0:0:2"/>
                                                </Storyboard>
                                            </BeginStoryboard>
                                        </Trigger.EnterActions>
                                        <Trigger.ExitActions>
                                            <StopStoryboard BeginStoryboardName="RotateStatusGear"/>
                                        </Trigger.ExitActions>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                    <TextBlock x:Name="TxtStatus" FontSize="11" 
                               Foreground="{StaticResource TextMutedBrush}"
                               Text="Ready â€” drag PS5 game dump folders to add to queue"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="TxtToolVersion" FontSize="10" Foreground="{StaticResource TextMutedBrush}" 
                               VerticalAlignment="Center" Text="UFS2Tool v3.0"/>
                    <Button x:Name="BtnCheckUpdate" Style="{StaticResource SecondaryButton}" Margin="8,0,0,0"
                            Padding="8,1" Click="BtnCheckUpdate_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ”„" FontSize="10" Margin="0,0,4,0"/>
                            <TextBlock Text="Update" FontSize="10"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="BtnUninstallUpdate" Style="{StaticResource SecondaryButton}" Margin="4,0,0,0"
                            Padding="8,1" Click="BtnUninstallUpdate_Click" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸ—‘ï¸" FontSize="10" Margin="0,0,4,0"/>
                            <TextBlock Text="Revert to v3.0" FontSize="10"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â•â•â• OVERLAY: UFS2Tool first-run â•â•â• -->
        <Border x:Name="OverlaySetup" Grid.RowSpan="3" Visibility="Collapsed"
                Background="#E0000000">
            <Border Background="{StaticResource BgCardBrush}" CornerRadius="12" Padding="32"
                    MaxWidth="420" MaxHeight="300"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1">
                <Grid VerticalAlignment="Center">
                    <!-- 1. LOADING PANEL (Initial extraction) -->
                    <StackPanel x:Name="PanelLoading" Visibility="Visible">
                        <TextBlock x:Name="TxtLoadingIcon" Text="âš¡" FontSize="32" HorizontalAlignment="Center" Margin="0,0,0,16">
                            <TextBlock.RenderTransform>
                                <RotateTransform x:Name="SpinnerTransform" Angle="0" CenterX="16" CenterY="16"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <TextBlock Text="Initializing System" FontSize="18" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,0,0,12"/>
                        <TextBlock x:Name="TxtLoadingMessage" TextWrapping="Wrap" TextAlignment="Center"
                                   FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,20"
                                   Text="Setting up internal tools for the first time..."/>
                        <ProgressBar IsIndeterminate="True" Height="4" Background="#1A1A2E" BorderThickness="0" Foreground="{StaticResource AccentPurpleBrush}"/>
                    </StackPanel>

                    <!-- 2. SETUP PANEL (Fallback if extraction fails) -->
                    <StackPanel x:Name="PanelSetup" Visibility="Collapsed">
                        <TextBlock Text="âš™ï¸ Setup Required" FontSize="18" FontWeight="Bold" 
                                   HorizontalAlignment="Center" Margin="0,0,0,12"/>
                        <TextBlock x:Name="TxtSetupMessage" TextWrapping="Wrap" TextAlignment="Center"
                                   FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,16"
                                   Text="UFS2Tool is required but was not found. Please locate UFS2Tool.exe on your system."/>
                        
                        <TextBlock Text="If you don't have it, download the latest version from GitHub. Please ensure you download the 'win-x64-selfcontained.zip' file."
                                   FontSize="11" Foreground="{StaticResource TextMutedBrush}" 
                                   TextWrapping="Wrap" TextAlignment="Center" Margin="0,0,0,16"/>

                        <StackPanel HorizontalAlignment="Center">
                            <Button x:Name="BtnSetupBrowse" Content="Locate UFS2Tool.exe" 
                                    Style="{StaticResource PrimaryButton}" Click="BtnSetupBrowse_Click"
                                    Padding="30,12" Margin="0,0,0,10" HorizontalAlignment="Center"/>
                            
                            <Button x:Name="BtnGetUfs2Tool" Content="Get UFS2Tool from GitHub" 
                                    Style="{StaticResource SecondaryButton}" Click="BtnGetUfs2Tool_Click"
                                    Padding="20,8" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>

        </Grid>
    </Border>
</Window>
