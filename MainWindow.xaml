<Window x:Class="Dump2UfsGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="dump2ufs â€” PS5 Game to .ffpkg Converter"
        Width="720" Height="700" MinWidth="600" MinHeight="600"
        Background="{StaticResource BgDarkBrush}"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Icon="pack://application:,,,/ico.png">

    <Window.Resources>
        <!-- Glow effect for cards -->
        <DropShadowEffect x:Key="CardGlow" Color="#7B2FFF" BlurRadius="0" ShadowDepth="0" Opacity="0"/>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- â•â•â• HEADER â•â•â• -->
        <Border Grid.Row="0" Background="{StaticResource BgMediumBrush}" 
                BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="0,0,0,1"
                Padding="24,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <Image Source="pack://application:,,,/ico.png" Width="28" Height="28" VerticalAlignment="Center" Margin="0,0,10,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="dump2ufs" FontSize="18" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                        <TextBlock Text="PS5 Game Dump â†’ .ffpkg Converter" FontSize="11" 
                                   Foreground="{StaticResource TextSecondaryBrush}" Margin="0,-1,0,0"/>
                    </StackPanel>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button x:Name="BtnCheckUpdate" Content="ðŸ”„ Update UFS2Tool"
                            Style="{StaticResource SecondaryButton}" Click="BtnCheckUpdate_Click"
                            Margin="0,0,8,0" FontSize="11"/>
                    <Border Background="{StaticResource BgCardBrush}" CornerRadius="6" Padding="8,5"
                            BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1">
                        <TextBlock x:Name="TxtToolVersion" Text="UFS2Tool: â€”" FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}" VerticalAlignment="Center"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- â•â•â• MAIN CONTENT â•â•â• -->
        <Grid Grid.Row="1" Margin="24,16,24,12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- â”€â”€ INPUT / DROP ZONE SECTION â”€â”€ -->
            <Border Grid.Row="0" Background="{StaticResource BgCardBrush}" CornerRadius="10" Padding="16"
                    BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1"
                    Margin="0,0,0,10">
                <StackPanel>
                    <!-- â”€â”€ DRAG-AND-DROP ZONE â”€â”€ -->
                    <Border x:Name="DropZoneBorder" CornerRadius="10" Padding="0"
                            Margin="0,0,0,10"
                            AllowDrop="True"
                            Drop="DropZone_Drop" DragOver="DropZone_DragOver" DragLeave="DropZone_DragLeave"
                            Cursor="Hand" MouseLeftButtonDown="DropZone_MouseClick">
                        <Border.BorderBrush>
                            <SolidColorBrush x:Name="DropZoneBorderBrush" Color="#353560"/>
                        </Border.BorderBrush>
                        <Border.BorderThickness>
                            <Thickness>2</Thickness>
                        </Border.BorderThickness>
                        <Border.Background>
                            <SolidColorBrush x:Name="DropZoneBgBrush" Color="#0A0A1A"/>
                        </Border.Background>
                        <Grid MinHeight="110">
                            <!-- Drop zone content -->
                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                <!-- Folder icon -->
                                <TextBlock x:Name="DropZoneIcon" Text="ðŸ“‚" FontSize="36" 
                                           HorizontalAlignment="Center" Margin="0,0,0,8"
                                           RenderTransformOrigin="0.5,0.5">
                                    <TextBlock.RenderTransform>
                                        <ScaleTransform x:Name="DropZoneIconScale" ScaleX="1" ScaleY="1"/>
                                    </TextBlock.RenderTransform>
                                </TextBlock>
                                <!-- Instructions -->
                                <TextBlock x:Name="DropZoneText" Text="Drag &amp; drop a PS5 game dump folder here"
                                           FontSize="13" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           HorizontalAlignment="Center" Margin="0,0,0,4"/>
                                <TextBlock x:Name="DropZoneSubText" Text="or click to browse"
                                           FontSize="11" Foreground="{StaticResource TextMutedBrush}"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Drag-over highlight overlay -->
                            <Border x:Name="DropZoneHighlight" CornerRadius="10" IsHitTestVisible="False"
                                    Visibility="Collapsed">
                                <Border.Background>
                                    <SolidColorBrush Color="#7B2FFF" Opacity="0.08"/>
                                </Border.Background>
                            </Border>
                        </Grid>
                    </Border>

                    <!-- Currently selected path (shown after selection) -->
                    <Border x:Name="PanelSelectedPath" Visibility="Collapsed"
                            Background="#0D7B2FFF" CornerRadius="6" Padding="10" Margin="0,0,0,0">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="ðŸ“" FontSize="13" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="TxtInputPath" Grid.Column="1" FontSize="12"
                                       Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"
                                       TextTrimming="CharacterEllipsis"/>
                            <Button x:Name="BtnClearInput" Grid.Column="2" Content="âœ•" FontSize="11"
                                    Padding="6,2" Margin="8,0,0,0" VerticalAlignment="Center"
                                    Click="BtnClearInput_Click">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                        <Setter Property="FontSize" Value="11"/>
                                        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Game info panel (hidden until valid) -->
                    <Border x:Name="PanelGameInfo" Visibility="Collapsed"
                            Background="#0D7B2FFF" CornerRadius="6" Padding="10" Margin="0,8,0,0"
                            BorderBrush="#307B2FFF" BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="ðŸŽ®" FontSize="13" VerticalAlignment="Center" Margin="0,0,6,0"/>
                            <TextBlock x:Name="TxtGameTitle" FontSize="13" FontWeight="SemiBold" 
                                       Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="  â€¢  " FontSize="11" Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtGameId" FontSize="11" Foreground="{StaticResource AccentPurpleBrush}" VerticalAlignment="Center"/>
                            <TextBlock Text="  â€¢  " FontSize="11" Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center"/>
                            <TextBlock x:Name="TxtLabel" FontSize="11" Foreground="{StaticResource AccentOrangeBrush}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Border>

                    <!-- Error panel -->
                    <Border x:Name="PanelInputError" Visibility="Collapsed"
                            Background="#15F85149" CornerRadius="6" Padding="10" Margin="0,8,0,0"
                            BorderBrush="#30F85149" BorderThickness="1">
                        <TextBlock x:Name="TxtInputError" FontSize="11" Foreground="{StaticResource AccentRedBrush}"
                                   TextWrapping="Wrap"/>
                    </Border>
                </StackPanel>
            </Border>

            <!-- â”€â”€ OUTPUT SECTION â”€â”€ -->
            <Border Grid.Row="1" Background="{StaticResource BgCardBrush}" CornerRadius="10" Padding="16"
                    BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1"
                    Margin="0,0,0,10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="ðŸ’¾" FontSize="14" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBox x:Name="TxtOutputPath" Grid.Column="1" FontSize="12" Margin="0,0,8,0"/>
                    <Button x:Name="BtnBrowseOutput" Grid.Column="2" Content="Save As"
                            Style="{StaticResource SecondaryButton}" Click="BtnBrowseOutput_Click"/>
                </Grid>
            </Border>

            <!-- â”€â”€ CONVERT / CANCEL BUTTONS â”€â”€ -->
            <Grid Grid.Row="2" Margin="0,2,0,10">
                <Button x:Name="BtnConvert" Style="{StaticResource PrimaryButton}"
                        HorizontalAlignment="Stretch"
                        Click="BtnConvert_Click" IsEnabled="False">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âš¡" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Convert to .ffpkg" FontSize="15" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button x:Name="BtnCancel" Visibility="Collapsed"
                        HorizontalAlignment="Stretch"
                        Click="BtnCancel_Click" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                            <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                            <Setter Property="BorderBrush" Value="#30F85149"/>
                            <Setter Property="Padding" Value="24,12"/>
                        </Style>
                    </Button.Style>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="âœ•" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0"/>
                        <TextBlock Text="Cancel Conversion" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>

            <!-- â”€â”€ PROGRESS SECTION â”€â”€ -->
            <Border x:Name="PanelProgress" Grid.Row="3" Visibility="Collapsed"
                    Background="{StaticResource BgCardBrush}" CornerRadius="10" Padding="14"
                    BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1"
                    Margin="0,0,0,10">
                <StackPanel>
                    <Grid Margin="0,0,0,6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="TxtProgressStage" Grid.Column="0"
                                   FontSize="12" FontWeight="SemiBold" 
                                   Foreground="{StaticResource AccentBlueBrush}"/>
                        <TextBlock x:Name="TxtProgressPercent" Grid.Column="1"
                                   FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"/>
                    </Grid>
                    <ProgressBar x:Name="ProgressBar" Minimum="0" Maximum="100" Value="0" Margin="0,0,0,4"/>
                    <TextBlock x:Name="TxtProgressDetail" FontSize="10" 
                               Foreground="{StaticResource TextSecondaryBrush}" TextWrapping="Wrap"/>
                </StackPanel>
            </Border>

            <!-- â”€â”€ LOG OUTPUT (fills remaining space) â”€â”€ -->
            <Border Grid.Row="4" Background="{StaticResource BgCardBrush}" CornerRadius="10" Padding="12"
                    BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1">
                <DockPanel>
                    <Grid DockPanel.Dock="Top" Margin="0,0,0,8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="ðŸ“‹ Log Output" FontSize="11" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}" Grid.Column="0"/>
                        <Button x:Name="BtnClearLog" Grid.Column="1" Content="Clear"
                                FontSize="10" Padding="8,3" Click="BtnClearLog_Click">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                    <Setter Property="FontSize" Value="10"/>
                                </Style>
                            </Button.Style>
                        </Button>
                    </Grid>
                    <Border Background="{StaticResource BgInputBrush}" CornerRadius="6" Padding="2"
                            BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1">
                        <TextBox x:Name="TxtLog" IsReadOnly="True" TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 FontFamily="Cascadia Code, Consolas, monospace" FontSize="11"
                                 Background="Transparent" BorderThickness="0" Padding="8"
                                 Foreground="{StaticResource TextSecondaryBrush}"/>
                    </Border>
                </DockPanel>
            </Border>

        </Grid>

        <!-- â•â•â• STATUS BAR â•â•â• -->
        <Border Grid.Row="2" Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="0,1,0,0"
                Padding="16,8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="TxtStatus" Grid.Column="0" FontSize="11" 
                           Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center"
                           Text="Ready â€” select a PS5 game dump folder to begin"/>
                <TextBlock Grid.Column="1" FontSize="10" Foreground="{StaticResource TextMutedBrush}" 
                           VerticalAlignment="Center" Text="Powered by UFS2Tool by SvenGDK"/>
            </Grid>
        </Border>

        <!-- â•â•â• OVERLAY: UFS2Tool download/first-run â•â•â• -->
        <Border x:Name="OverlaySetup" Grid.RowSpan="3" Visibility="Collapsed"
                Background="#E0000000">
            <Border Background="{StaticResource BgCardBrush}" CornerRadius="12" Padding="32"
                    MaxWidth="420" MaxHeight="300"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="âš™ï¸ Setup Required" FontSize="18" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    <TextBlock x:Name="TxtSetupMessage" TextWrapping="Wrap" TextAlignment="Center"
                               FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,16"
                               Text="UFS2Tool is required but was not found. Would you like to download it automatically?"/>
                    <ProgressBar x:Name="SetupProgress" Visibility="Collapsed" Margin="0,0,0,12"/>
                    <TextBlock x:Name="TxtSetupProgress" Visibility="Collapsed" FontSize="11"
                               HorizontalAlignment="Center" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,12"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="BtnSetupDownload" Content="Download Now" 
                                Style="{StaticResource PrimaryButton}" Padding="20,10"
                                Click="BtnSetupDownload_Click" Margin="0,0,8,0"/>
                        <Button x:Name="BtnSetupBrowse" Content="Browse..." 
                                Style="{StaticResource SecondaryButton}" Click="BtnSetupBrowse_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

    </Grid>
</Window>
