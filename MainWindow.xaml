<Window x:Class="Dump2UfsGui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="dump2ufs â€” PS5 Game to .ffpkg Converter"
        Width="880" Height="680" MinWidth="700" MinHeight="550"
        ResizeMode="CanMinimize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Icon="pack://application:,,,/ico.png">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="52" GlassFrameThickness="0"
                      ResizeBorderThickness="0" CornerRadius="12"
                      UseAeroCaptionButtons="False"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <DropShadowEffect x:Key="CardGlow" Color="#7B2FFF" BlurRadius="0" ShadowDepth="0" Opacity="0"/>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>

    <Border Background="{StaticResource BgDarkBrush}" 
            CornerRadius="12" 
            BorderBrush="{StaticResource BorderDimBrush}" 
            BorderThickness="1"
            Margin="1"
            ClipToBounds="True">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- â•â•â• CUSTOM TITLE BAR / HEADER â•â•â• -->
            <Border Grid.Row="0" Background="{StaticResource BgMediumBrush}" 
                    BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="0,0,0,1"
                    Padding="16,0" CornerRadius="11,11,0,0">
                <Grid Height="52">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- App branding (left) -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                        <Image Source="pack://application:,,,/ico.png" Width="24" Height="24" VerticalAlignment="Center" Margin="0,0,10,0" RenderOptions.BitmapScalingMode="HighQuality"/>
                        <StackPanel VerticalAlignment="Center">
                            <TextBlock Text="dump2ufs" FontSize="16" FontWeight="Bold" Foreground="{StaticResource TextPrimaryBrush}"/>
                            <TextBlock Text="PS5 Game Dump â†’ .ffpkg Converter" FontSize="10" 
                                       Foreground="{StaticResource TextSecondaryBrush}" Margin="0,-1,0,0"/>
                        </StackPanel>
                    </StackPanel>

                <!-- Window controls (right) -->
                <Button Grid.Column="1" Click="BtnMinimize_Click" Focusable="False" IsTabStop="False"
                        WindowChrome.IsHitTestVisibleInChrome="True">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Width" Value="46"/>
                            <Setter Property="Height" Value="32"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="Bg" Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bg" Property="Background" Value="#20FFFFFF"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="Bg" Property="Background" Value="#30FFFFFF"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="â”€" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                </Button>

                <Button Grid.Column="2" Click="BtnClose_Click" Focusable="False" IsTabStop="False"
                        WindowChrome.IsHitTestVisibleInChrome="True" Margin="4,0,0,0">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Width" Value="46"/>
                            <Setter Property="Height" Value="32"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Foreground" Value="{StaticResource TextSecondaryBrush}"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="Bg" Background="{TemplateBinding Background}" CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bg" Property="Background" Value="#40F85149"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="Bg" Property="Background" Value="#60F85149"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                    <TextBlock Text="âœ•" FontSize="13" Foreground="{StaticResource TextSecondaryBrush}"/>
                </Button>
            </Grid>
        </Border>

        <!-- â•â•â• MAIN CONTENT â•â•â• -->
        <Grid Grid.Row="1" Margin="20,12,20,8">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*" MinHeight="200"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- â”€â”€ ROW 0: DRAG-AND-DROP ZONE (full width, compact) â”€â”€ -->
            <Border Grid.Row="0" x:Name="DropZoneBorder" CornerRadius="10" Padding="0"
                    Margin="0,0,0,8"
                    AllowDrop="True"
                    Drop="DropZone_Drop" DragOver="DropZone_DragOver" DragLeave="DropZone_DragLeave"
                    Cursor="Hand" MouseLeftButtonDown="DropZone_MouseClick">
                <Border.BorderBrush>
                    <SolidColorBrush x:Name="DropZoneBorderBrush" Color="#353560"/>
                </Border.BorderBrush>
                <Border.BorderThickness>
                    <Thickness>2</Thickness>
                </Border.BorderThickness>
                <Border.Background>
                    <SolidColorBrush x:Name="DropZoneBgBrush" Color="#0A0A1A"/>
                </Border.Background>
                <Grid MinHeight="68">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,8,0,8">
                        <TextBlock x:Name="DropZoneIcon" Text="ðŸ“‚" FontSize="22" 
                                   HorizontalAlignment="Center" Margin="0,0,0,4"
                                   RenderTransformOrigin="0.5,0.5">
                            <TextBlock.RenderTransform>
                                <ScaleTransform x:Name="DropZoneIconScale" ScaleX="1" ScaleY="1"/>
                            </TextBlock.RenderTransform>
                        </TextBlock>
                        <TextBlock x:Name="DropZoneText" Text="Drag &amp; drop PS5 game dump folders here to add to queue"
                                   FontSize="13" FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center" Margin="0,0,0,2"/>
                        <TextBlock x:Name="DropZoneSubText" Text="or click to browse â€” drop multiple folders at once"
                                   FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"/>
                    </StackPanel>

                    <Border x:Name="DropZoneHighlight" CornerRadius="10" IsHitTestVisible="False"
                            Visibility="Collapsed">
                        <Border.Background>
                            <SolidColorBrush Color="#7B2FFF" Opacity="0.08"/>
                        </Border.Background>
                    </Border>
                </Grid>
            </Border>

            <!-- â”€â”€ ROW 1: QUEUE (left) + LOG (right) â€” side by side â”€â”€ -->
            <Grid Grid.Row="1" Margin="0,0,0,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition x:Name="LogColumn" Width="0"/>
                </Grid.ColumnDefinitions>

                <!-- QUEUE LIST (left side, always visible) -->
                <Border Grid.Column="0" Background="{StaticResource BgCardBrush}" CornerRadius="10" Padding="12"
                        BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1">
                    <DockPanel>
                        <Grid DockPanel.Dock="Top" Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal">
                                <TextBlock Text="ðŸ“‹ Conversion Queue" FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock x:Name="TxtQueueCount" Text="" FontSize="11"
                                           Foreground="{StaticResource TextMutedBrush}" Margin="8,0,0,0"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                            <Button x:Name="BtnClearQueue" Grid.Column="1" Content="Clear Queue"
                                    FontSize="10" Padding="8,3" Click="BtnClearQueue_Click">
                                <Button.Style>
                                    <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                        <Setter Property="FontSize" Value="10"/>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>

                        <!-- Queue items -->
                        <ListBox x:Name="QueueListBox" Background="Transparent" BorderThickness="0"
                                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                                 AllowDrop="True"
                                 PreviewMouseLeftButtonDown="QueueList_PreviewMouseLeftButtonDown"
                                 PreviewMouseMove="QueueList_PreviewMouseMove"
                                 Drop="QueueList_Drop"
                                 DragOver="QueueList_DragOver">
                            <ListBox.ItemContainerStyle>
                                <Style TargetType="ListBoxItem">
                                    <Setter Property="Background" Value="Transparent"/>
                                    <Setter Property="BorderThickness" Value="0"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0,0,0,4"/>
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListBoxItem">
                                                <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                                        Padding="{TemplateBinding Padding}">
                                                    <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                </Border>
                                                <ControlTemplate.Triggers>
                                                    <Trigger Property="IsSelected" Value="True">
                                                        <Setter TargetName="Bd" Property="Background" Value="#0D7B2FFF"/>
                                                    </Trigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListBox.ItemContainerStyle>
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="6" Padding="10,8" Margin="0"
                                            BorderThickness="1">
                                        <Border.Style>
                                            <Style TargetType="Border">
                                                <Setter Property="Background" Value="#0D0D20"/>
                                                <Setter Property="BorderBrush" Value="{StaticResource BorderDimBrush}"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Status}" Value="Processing">
                                                        <Setter Property="BorderBrush" Value="#507B2FFF"/>
                                                        <Setter Property="Background" Value="#0F7B2FFF"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Done">
                                                        <Setter Property="BorderBrush" Value="#303FB950"/>
                                                        <Setter Property="Background" Value="#0A3FB950"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Status}" Value="Error">
                                                        <Setter Property="BorderBrush" Value="#30F85149"/>
                                                        <Setter Property="Background" Value="#0AF85149"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Border.Style>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Drag handle -->
                                            <TextBlock Grid.Column="0" Text="â ¿" FontSize="16"
                                                       Foreground="{StaticResource TextMutedBrush}"
                                                       VerticalAlignment="Center" Margin="0,0,10,0"
                                                       Cursor="SizeAll" ToolTip="Drag to reorder">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsWaiting}" Value="False">
                                                                <Setter Property="Visibility" Value="Hidden"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>

                                            <!-- Game info -->
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <StackPanel Orientation="Horizontal">
                                                    <TextBlock Text="ðŸŽ®" FontSize="12" VerticalAlignment="Center" Margin="0,0,5,0"/>
                                                    <TextBlock Text="{Binding GameInfo.TitleName}" FontSize="12" FontWeight="SemiBold"
                                                               Foreground="{StaticResource TextPrimaryBrush}" VerticalAlignment="Center"
                                                               TextTrimming="CharacterEllipsis" MaxWidth="280"/>
                                                    <TextBlock Text="  â€¢  " FontSize="10" Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center"/>
                                                    <TextBlock Text="{Binding GameInfo.TitleId}" FontSize="10" 
                                                               Foreground="{StaticResource AccentPurpleBrush}" VerticalAlignment="Center"/>
                                                </StackPanel>
                                                <TextBlock Text="{Binding StatusText}" FontSize="10" Margin="0,2,0,0"
                                                           TextTrimming="CharacterEllipsis">
                                                    <TextBlock.Style>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                                            <Style.Triggers>
                                                                <DataTrigger Binding="{Binding Status}" Value="Processing">
                                                                    <Setter Property="Foreground" Value="{StaticResource AccentPurpleBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Done">
                                                                    <Setter Property="Foreground" Value="{StaticResource AccentGreenBrush}"/>
                                                                </DataTrigger>
                                                                <DataTrigger Binding="{Binding Status}" Value="Error">
                                                                    <Setter Property="Foreground" Value="{StaticResource AccentRedBrush}"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </TextBlock.Style>
                                                </TextBlock>
                                            </StackPanel>

                                            <!-- Progress (visible when processing) -->
                                            <ProgressBar Grid.Column="2" Width="80" Height="6" Margin="8,0"
                                                         VerticalAlignment="Center"
                                                         Minimum="0" Maximum="100"
                                                         Value="{Binding Progress, Mode=OneWay}">
                                                <ProgressBar.Style>
                                                    <Style TargetType="ProgressBar" BasedOn="{StaticResource {x:Type ProgressBar}}">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Status}" Value="Processing">
                                                                <Setter Property="Visibility" Value="Visible"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                        <Setter Property="Visibility" Value="Collapsed"/>
                                                    </Style>
                                                </ProgressBar.Style>
                                            </ProgressBar>

                                            <!-- Remove button (only for waiting items) -->
                                            <Button Grid.Column="3" Content="âœ•" FontSize="11"
                                                    Padding="6,2" VerticalAlignment="Center"
                                                    Click="BtnRemoveQueueItem_Click"
                                                    Tag="{Binding}"
                                                    Visibility="{Binding CanRemove, Converter={StaticResource BoolToVis}}">
                                                <Button.Style>
                                                    <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                                        <Setter Property="FontSize" Value="11"/>
                                                        <Setter Property="Foreground" Value="{StaticResource TextMutedBrush}"/>
                                                    </Style>
                                                </Button.Style>
                                            </Button>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </DockPanel>
                </Border>

                <!-- LOG OUTPUT (right side, toggled) -->
                <Border x:Name="PanelLog" Grid.Column="1" Visibility="Collapsed"
                        Background="{StaticResource BgCardBrush}" CornerRadius="10" Padding="12"
                        BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1"
                        Margin="8,0,0,0">
                    <DockPanel>
                        <Grid DockPanel.Dock="Top" Margin="0,0,0,6">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="ðŸ“‹ Log Output" FontSize="11" FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondaryBrush}" Grid.Column="0"/>
                            <StackPanel Grid.Column="1" Orientation="Horizontal">
                                <Button x:Name="BtnToggleLog" Content="Hide" FontSize="10" Padding="8,3"
                                        Click="BtnToggleLog_Click" Margin="0,0,4,0">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                            <Setter Property="FontSize" Value="10"/>
                                        </Style>
                                    </Button.Style>
                                </Button>
                                <Button x:Name="BtnClearLog" Content="Clear" FontSize="10" Padding="8,3"
                                        Click="BtnClearLog_Click">
                                    <Button.Style>
                                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                                            <Setter Property="FontSize" Value="10"/>
                                        </Style>
                                    </Button.Style>
                                </Button>
                            </StackPanel>
                        </Grid>
                        <Border Background="{StaticResource BgInputBrush}" CornerRadius="6" Padding="2"
                                BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1">
                            <TextBox x:Name="TxtLog" IsReadOnly="True" TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     FontFamily="Cascadia Code, Consolas, monospace" FontSize="11"
                                     Background="Transparent" BorderThickness="0" Padding="8"
                                     Foreground="{StaticResource TextSecondaryBrush}"/>
                        </Border>
                    </DockPanel>
                </Border>
            </Grid>

            <!-- â”€â”€ ROW 2: OUTPUT DIR + CONVERT/CANCEL (side by side) â”€â”€ -->
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Output directory -->
                <Border Grid.Column="0" Background="{StaticResource BgCardBrush}" CornerRadius="10" Padding="12"
                        BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1"
                        Margin="0,0,8,0">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="ðŸ’¾ Output:" FontSize="12" VerticalAlignment="Center" Margin="0,0,8,0"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <TextBox x:Name="TxtOutputDir" Grid.Column="1" FontSize="12" Margin="0,0,8,0"/>
                        <Button x:Name="BtnBrowseOutput" Grid.Column="2" Content="Browse"
                                Style="{StaticResource SecondaryButton}" Click="BtnBrowseOutput_Click"/>
                    </Grid>
                </Border>

                <!-- Convert / Cancel -->
                <Grid Grid.Column="1" MinWidth="220">
                    <Button x:Name="BtnConvert" Style="{StaticResource PrimaryButton}"
                            HorizontalAlignment="Stretch"
                            Click="BtnConvert_Click" IsEnabled="False">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âš¡" FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock x:Name="TxtConvertButton" Text="Convert to .ffpkg" FontSize="14" FontWeight="Bold" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="BtnCancel" Visibility="Collapsed"
                            HorizontalAlignment="Stretch"
                            Click="BtnCancel_Click" Cursor="Hand">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="#D32F2F"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Padding" Value="24,12"/>
                                <Setter Property="FontSize" Value="14"/>
                                <Setter Property="Cursor" Value="Hand"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" 
                                                    CornerRadius="8" Padding="{TemplateBinding Padding}">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter Property="Background" Value="#E53935"/>
                                                </Trigger>
                                                <Trigger Property="IsPressed" Value="True">
                                                    <Setter Property="Background" Value="#B71C1C"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="âœ•" FontSize="14" VerticalAlignment="Center" Margin="0,0,6,0" Foreground="White"/>
                            <TextBlock Text="Cancel" FontSize="14" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="White"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>

        </Grid>

        <!-- â•â•â• STATUS BAR â•â•â• -->
        <Border Grid.Row="2" Background="{StaticResource BgMediumBrush}"
                BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="0,1,0,0"
                Padding="16,8" CornerRadius="0,0,11,11">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="BtnShowLog" Grid.Column="0" Content="ðŸ“‹ Log" FontSize="10" Padding="8,3"
                        Click="BtnShowLog_Click" Margin="0,0,10,0" VerticalAlignment="Center">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource SecondaryButton}">
                            <Setter Property="FontSize" Value="10"/>
                        </Style>
                    </Button.Style>
                </Button>
                <TextBlock x:Name="TxtStatus" Grid.Column="1" FontSize="11" 
                           Foreground="{StaticResource TextMutedBrush}" VerticalAlignment="Center"
                           Text="Ready â€” drag PS5 game dump folders to add to queue"/>
                <TextBlock Grid.Column="2" FontSize="10" Foreground="{StaticResource TextMutedBrush}" 
                           VerticalAlignment="Center" Text="Powered by UFS2Tool by SvenGDK"/>
            </Grid>
        </Border>

        <!-- â•â•â• OVERLAY: UFS2Tool first-run â•â•â• -->
        <Border x:Name="OverlaySetup" Grid.RowSpan="3" Visibility="Collapsed"
                Background="#E0000000">
            <Border Background="{StaticResource BgCardBrush}" CornerRadius="12" Padding="32"
                    MaxWidth="420" MaxHeight="300"
                    HorizontalAlignment="Center" VerticalAlignment="Center"
                    BorderBrush="{StaticResource BorderDimBrush}" BorderThickness="1">
                <StackPanel VerticalAlignment="Center">
                    <TextBlock Text="âš™ï¸ Setup Required" FontSize="18" FontWeight="Bold" 
                               HorizontalAlignment="Center" Margin="0,0,0,12"/>
                    <TextBlock x:Name="TxtSetupMessage" TextWrapping="Wrap" TextAlignment="Center"
                               FontSize="13" Foreground="{StaticResource TextSecondaryBrush}" Margin="0,0,0,16"
                               Text="UFS2Tool is required but was not found. Please locate UFS2Tool.exe on your system."/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="BtnSetupBrowse" Content="Browse for UFS2Tool.exe" 
                                Style="{StaticResource PrimaryButton}" Click="BtnSetupBrowse_Click"
                                Padding="20,10"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Border>

        </Grid>
    </Border>
</Window>
